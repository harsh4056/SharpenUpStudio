<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  
    android:background="@color/white"
     >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp" >
    

    <Button
        android:id="@+id/handle_me"
         style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Handled By"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/reset"
          style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/mode_me"
          style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Mode"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/nature_me"
         style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Nature"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/common_me"
         style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Common Details"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/personres_me"
        style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Person Responsible"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/atb_me"
         style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Action to be taken"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/search_me"
         style="@style/btn_white_large"
        android:layout_width="wrap_content"
          android:layout_marginTop="@dimen/pad_5dp" 
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="#ffffff" />
  
    </LinearLayout>
    </ScrollView>

