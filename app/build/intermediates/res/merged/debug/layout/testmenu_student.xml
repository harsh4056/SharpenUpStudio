<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp"
    android:background="@color/white"
 >

    
    <Button
        android:id="@+id/viewtt_student"
       style="@style/btn_white_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/pad_5dp"
        android:text="View Test Schedule"
        android:textSize="22sp"
      
        android:textColor="#fff" />
    
     <Button
         android:id="@+id/upload_student"
         style="@style/btn_white_large"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/pad_5dp"
         android:text="Download answer key"
         android:textColor="#fff"
         android:textSize="22sp" />
    
        <Button
            android:id="@+id/stud_view_student"
            style="@style/btn_white_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_5dp"
            android:text="View marks"
            android:textColor="#fff"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/pad_10dp"
            android:src="@drawable/tunnu" />

</LinearLayout>
