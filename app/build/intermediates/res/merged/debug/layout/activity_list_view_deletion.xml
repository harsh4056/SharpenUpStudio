<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp"
    android:background="@color/white"
   
    tools:context=".ListViewAnimations" >

    <view
        android:id="@+id/listViewBackground"
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_weight="0.09"
        class="sharpenup.previous.sharpenup.BackgroundContainer"
        android:background="@color/white" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </view>

    <Button
        android:id="@+id/add"
        style="@style/btn_white_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/cnd"
        style="@style/btn_white_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Add Description and Code" />

</LinearLayout>